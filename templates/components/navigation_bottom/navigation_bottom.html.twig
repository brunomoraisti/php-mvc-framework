<!-- Modal Perfil-->
<div class="modal fade" data-hash="#perfil"  id="modalPerfil" role="dialog" >
    <div class="modal-dialog modal-dialog-telaCheia" style="position:absolute;bottom:0;margin:0;width:100%;">
        <div class="modal-content modal-content-telaCheia">
            <div class="modal-header">
                <h4 class="modal-title h1-title">Perfil</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="">
                        <img class="img-circle" alt="Usuario" src="/assets/upload/usuario/{{imagemUsuario}}" height="60px">
                    </div>
                    <div class="pl-4">
                        <h5 class="mb-0">{{nomeUsuario}}</h5>
                        <h6 class="text-muted font-weight-lighter">{{emailUsuario}}</h6>
                    </div>
                </div>
                <div class="mt-4">
                    <div class="dropdown-divider"></div>
                    <div class="col-12 p-0">
                        <a href="/usuario/meusdados" class="dropdown-item pl-0 font-weight-light"><span class="mdi mdi-24px mdi-account-outline"></span><span style="font-size: 1rem">  Meus dados</span></a>
                    </div>
                    <div class="dropdown-divider"></div>
                    <div class="col-12 p-0">
                        <a href="/institucional/privacidade" class="dropdown-item pl-0 font-weight-light"><span class="mdi mdi-24px mdi-lock-outline"></span><span style="font-size: 1rem"> Termos de uso e privacidade</span></a>
                    </div>
                    <div class="dropdown-divider"></div>
                </div>

                <a href="/usuario/logoff" class="btn btn-outline-primary btn-block btn-lg mt-5">Sair</a>
            </div>
            <!--<div class="modal-footer">
                <button type="button" class="btn btn-link" data-dismiss="modal">Voltar</button>
            </div>-->
        </div>
    </div>
</div>